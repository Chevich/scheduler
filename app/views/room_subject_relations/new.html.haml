=form_for @room_subject_relations do |f|
  .box
    =f.label :room, 'Кабинет'
    =f.label :room, @room_subject_relations.room.name
    =f.hidden_field :room_id
  .box
    =f.label :subject, 'Предмет'
    =f.select :subject, current_user.subjects.all.map{|u|[u.name, u.id]}
  .box
    =submit_tag 'Сохранить', :params => {rooms_id: @room_subject_relations.room.id}
    =link_to 'Назад', room_subject_relations_path(:params => {rooms_id: @room_subject_relations.room.id})
