%h1= "Класс '#{@klass.name unless @klass.nil?}'"
- unless @klass_subject_relations.empty?
  %table
    %tr
      %th Предмет
      %th Часов в неделю
      %th
      %th
    - @klass_subject_relations.each do |f|
      %tr
        %td=f.subject.name
        %td=f.hours_per_week
        %td=link_to 'Удалить', f, :method => :delete, :data => {confirm: "Вы уверены?"}, :params => {klasses_id: @klass.id}
  = link_to 'Удалить все предметы', delete_all_klass_subject_relations_path(:params => {klasses_id: @klass.id} ),:method => :post
- else
  .empty Пустой список
  = link_to 'Добавить все предметы', add_all_klass_subject_relations_path(:params => {klasses_id: @klass.id} ),:method => :post

= link_to 'Новый предмет', new_klass_subject_relation_path(:params => {klasses_id: @klass.id})